<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <title>Chat CGT</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f0f2f5;
      padding: 40px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 10px;
      margin-bottom: 20px;
    }

    form textarea {
      border: none;
      outline: none;
      border-bottom: 2px solid #AAA;
      width: 100%;
      display: block;
      padding: 10px;
      font-size: 14px;
      line-height: 16px;
      box-sizing: border-box;
    }

    form textarea {
      font-family: inherit;
      resize: none;
      scrollbar-width: 0;
      height: 38px;
      width: 500px;

      max-height: 300px;
    }

    form textarea::-webkit-scrollbar {
      width: 0;
    }

    form input:focus,
    form textarea:focus {
      border-bottom-color: #178EC9;
    }

    input[type="text"] {
      padding: 10px;
      border-radius: 8px;
      border: 1px solid #ccc;
      width: 300px;
    }

    button {
      background-color: #3498db;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 8px;
      cursor: pointer;
    }

    #respuesta {
      margin-top: 20px;
      background: white;
      padding: 20px;
      border-radius: 10px;
      max-width: 600px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      white-space: pre-wrap;
    }

    .loader {
      border: 16px solid #f3f3f3;
      border-top: 16px solid #3498db;
      border-radius: 50%;
      width: 20px;
      height: 20px;
      animation: spin 2s linear infinite;
    }

    @keyframes spin {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }
  </style>
</head>

<body>



  <h2>Chat CGT</h2>

  <form id="chatForm">

    <div>
      <textarea id="texto" name="texto2" placeholder="Tu mensaje"></textarea>
    </div>
    <div>
      <button type="submit">Enviar</button>
    </div>
  </form>

  <div id="loader" style="display: none;" class="loader"></div>
  <div id="error" style="display: none;">Error al realizar la consulta!</div>
  <div id="respuesta" style="display: none;">Respuesta</div>



  <script>


    const textarea = document.querySelector('textarea');

    textarea.addEventListener("input", e => {
      textarea.style.height = '38px';
      textarea.style.height = (textarea.scrollHeight + 2) + 'px';
    });



    document.getElementById('chatForm').addEventListener('submit', async function (e) {
      e.preventDefault();

      const texto = document.getElementById('texto').value;
      const respuestaDiv = document.getElementById('loader');
      const error = document.getElementById('error');
      const respuesta = document.getElementById('respuesta');



      try {
        respuestaDiv.style.display = 'block';
        const res = await fetch('/sendText/enviar', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ texto2: texto })
        });

        const data = await res.json();
        respuestaDiv.style.display = 'none';
        respuesta.style.display = 'block';
        respuesta.innerHTML = data.content;

      } catch (err) {
        respuestaDiv.style.display = 'none';
        error.style.display = 'block';
        console.error(err);
      }
    });

  </script>
</body>

</html>
